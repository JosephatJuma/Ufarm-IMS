html(lang="en")
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css')
        link(rel='stylesheet' href='/assets//bootstrap/css/bootstrap-grid.rtl.min.css.map')
        link(rel="shortcut icon", href="/assets/vectors/ufarm-logo.png", type="image/x-icon")
        style.
                body {
                background-image: url('/assets/images/banner1.jpg');
                background-repeat: no-repeat;
                background-size: cover;
                }
                .login-form {
                background-color: #5c9f24c0;
                padding: 20px;
                border-radius: 5px;
                box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);
                margin-top: 100px;
                }
                .form-control:focus {
                border-color: #007bff;
                box-shadow: none;
                }
                
.container
  .row.justify-content-center
    .col-md-5
      .login-form
        h2.text-center.mb-4 Login
        form#form(onsubmit="return login();" action="/login" method="post")
          .form-group
            label.text-white(for='id') User ID:
            input#id.form-control(type='text' placeholder='Enter user ID' name="id" oninput="return validateId();")
            p#idErr
          .form-group
            label.text-white(for='password') Password:
            input#password.form-control(type='password' placeholder='Enter password' name="password" oninput="return validatePwd();")
            p#passwordErr
          button.btn.btn-dark.btn-block.mb-6(type='submit' style="margin-top:20px; width:200px;") LOGIN
script.
  function validateId(){
    let id = document.forms["form"]["id"].value; 
    let input = document.getElementById('id');
    let err= document.getElementById("idErr");
    if(id!=="" && id.length<=4){    
      err.textContent="Id must be over 5 character long"
      err.style.color="black"
      return;
      } else{
        err.textContent=''
      err.style.color="" 
      }
  } 
  function validatePwd(){
    let password = document.forms["form"]["password"].value; 
    let input = document.getElementById('password');
    let err= document.getElementById("passwordErr");
    if(password!=="" && password.length<=7){    
      err.textContent="Password must be 8 characters long"
      err.style.color="black"
      return;
      } else{
        err.textContent=''
      err.style.color="" 
      }
  } 
  const login=()=>{
    validateId(); 
    validatePwd()
  }
  


                
                
