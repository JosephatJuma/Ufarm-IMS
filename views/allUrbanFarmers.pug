doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css')
  link(rel='stylesheet' href='/assets//bootstrap/css/bootstrap-grid.rtl.min.css.map')
  link(rel="shortcut icon", href="/assets/vectors/ufarm-logo.png", type="image/x-icon")
  link(rel="stylesheet" href="/css/dashboard.css") 
  title Urban Farmers List
header
- let page = "list-uf"
  // Sidebar
  include ./includes/sidebar.pug
  include ./includes/navbar.pug 
main(style='margin-top: 58px')
  .container-fluid.pt-4
    .row
      .col-md-12
        .card
          .card-header
            h4.card-title
              |  All Registered Urban Farmers
          .card-body
           if message 
                p #{message}
           if urban_farmers
              table.table.table-responsive.table-bordered.table-rounded
                thead.text-white.bg-success
                  th Image
                  th Id
                  th Name
                  th Ward
                  th Address
                  th Phone Number
                  th Date Booked
                  th.text-right Action
                tbody
                      each urban_farmer in urban_farmers
                        tr
                          td
                            img(src='https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp' width="50px")
                          td 
                            span.badge.badge-success.text-white.bg-success
                              | #{urban_farmer.id}
                          td #{urban_farmer.name}
                          td #{urban_farmer.ward}
                          td #{urban_farmer.address}
                          td #{urban_farmer.phone}
                          td #{urban_farmer.activity}
                          
                          td.text-right
                            a(href='/list/urban-farmer/' + urban_farmer.id)
                              button.btn.bg-success.text-white.justify-content-between(style="margin:5px;")
                                i.bi.bi-three-dots-vertical.text-white
    include ./includes/alert-logout.pug  
include ./includes/scripts.pug  