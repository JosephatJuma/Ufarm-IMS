doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Dashboard
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css')
  link(rel="shortcut icon", href="/assets/vectors/ufarm-logo.png", type="image/x-icon")
  link(rel="stylesheet" href="/css/dashboard.css")  
body(onload="generateFarmerId()")
header
- let page = "dashboard"
  // Sidebar
  
  include ./includes/sidebar.pug
  include ./includes/navbar.pug 
// Main layout
main(style='margin-top: 58px')
  .container-fluid.pt-4
    .col-md-12
      .card.card-user
        .card-header
          h5.card-title Dashboard
        .card-body
          .row
            if user_role == "agric officer"  
              include ./includes/components/agric-officer/ward.pug  
            if user_role == "agric officer"  
              include ./includes/components/agric-officer/fo.pug            
            if user_role === "agric officer"  
              include ./includes/components/agric-officer/uf.pug
            if user_role === "farmer one"  
              include ./includes/components/farmer-one/uf.pug
            if user_role == "agric officer"
              include ./includes/components/agric-officer/products.pug   
            if user_role == "agric officer" 
              include ./includes/components/agric-officer/customers.pug

            //Urban farmer
            if user_role == "urban farmer"  
              include ./includes/components/urban-farmer/products.pug 
            if user_role == "urban farmer"  
              include ./includes/components/urban-farmer/orders.pug  
           
      include ./includes/alert-logout.pug      
include ./includes/scripts.pug
