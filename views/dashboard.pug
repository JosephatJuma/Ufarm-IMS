doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Dashboard
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css')
  link(rel="shortcut icon", href="/assets/vectors/ufarm-logo.png", type="image/x-icon")
  link(rel="stylesheet" href="/css/dashboard.css")  
body(onload="generateFarmerId()")
header
  // Sidebar
  nav#sidebarMenu.collapse.d-lg-block.sidebar.collapse.bg-white
    .position-sticky
      .list-group.list-group-flush.mx-3.mt-4
        a.list-group-item.list-group-item-action.py-2.ripple.active(href='/admin' )
          i.bi.bi-speedometer2.fa-fw.me-3
          span  Dashboard
        a.list-group-item.list-group-item-action.py-2.ripple(href='/register/fo')
          i.bi.bi-person-plus-fill.fa-fw.me-3
          span Register Farmer
        a.list-group-item.list-group-item-action.py-2.ripple(href='/add-product/')
          i.bi-file-earmark-plus-fill.fa-fw.me-3
          span Add product
        a.list-group-item.list-group-item-action.py-2.ripple(href='/list/fo')
          i.bi.bi-people-fill.fa-fw.me-3
          span Farmer Ones
        a.list-group-item.list-group-item-action.py-2.ripple(href='/list/products')
          i.bi.bi-receipt.fa-fw.me-3
          span Products
          form(action="/logout" method="POST")
            button.btn.list-group-item.list-group-item-action.bg-success.text-light.logout
              i.bi.bi-box-arrow-left.fa-fw.me-3
              | Logout
  nav#main-navbar.navbar.navbar-expand-lg.navbar-light.bg-dark.fixed-top
    .container-fluid
      button.navbar-toggler(type='button' data-mdb-toggle='collapse' data-mdb-target='#sidebarMenu' aria-controls='sidebarMenu' aria-expanded='false' aria-label='Toggle navigation')
        i.bi.bi-bars
      a.navbar-brand(href='#') 
          img(src="/assets/vectors/ufarm-logo-white.png"
          width="150"
          alt="U-Farm Logo"
          loading="lazy")
      form.d-none.d-md-flex.input-group.w-auto.my-auto
        input.form-control.rounded(autocomplete='off' type='search' placeholder='looking for anuthing?' style='min-width: 225px')
        span.input-group-text.bg-success.border-0.text-white
          i.bi.bi-search
      // Right links
      ul.navbar-nav.ms-auto.d-flex.flex-row
        // Notification dropdown
        li.nav-item.dropdown
          a#navbarDropdownMenuLink.nav-link.me-3.me-lg-0.dropdown-toggle.hidden-arrow(href='#' role='button' data-mdb-toggle='dropdown' aria-expanded='false')
            i.bi.bi-bell.text-light
            span.badge.rounded-pill.badge-notification.bg-success 1
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdownMenuLink')
            li
              a.dropdown-item(href='#') Some news
            li
              a.dropdown-item(href='#') Another news
            li
              a.dropdown-item(href='#') Something else here
        // Avatar
        li.nav-item.dropdown.text-light
          a#navbarDropdownMenuLink.nav-link.dropdown-toggle.hidden-arrow.d-flex.align-items-center(href='#' role='button' data-mdb-toggle='dropdown' aria-expanded='false')
            img.rounded-circle(src='https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp' height='40' alt='Avatar' loading='lazy')
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdownMenuLink')
            li
              a.dropdown-item(href='#') My profile
            li
              a.dropdown-item(href='#') Settings
            li
              a.dropdown-item(href='#') Logout
  
// Main layout
main(style='margin-top: 58px')
  .container-fluid.pt-4
    .col-md-12
      .card.card-user
        .card-header
          h5.card-title Dashboard
        .card-body
          .row
            .col-lg-3.col-md-4.col-sm-6(style="margin-bottom:10px;")
              .card.card-stats
                .card-body
                  .row
                    .col-5.col-md-4
                      .icon-big.text-center.icon-warning
                        i.bi.bi-geo-fill.text-success
                        button.btn.btn-success 
                         i.bi.bi-three-dots-vertical.text-white
                    .col-7.col-md-8
                      .numbers
                        p.card-category 
                          |  Wards                          
                        h1.card-title 
                          |   #{wards}                       
                .card-footer
                  hr
                  .stats
                    i.bi.bi-arrow-clockwise
                    |                     Update Now
            .col-lg-3.col-md-4.col-sm-6(style="margin-bottom:10px;")
              .card.card-stats
                .card-body
                  .row
                    .col-5.col-md-4
                      .icon-big.text-center.icon-warning
                        i.bi.bi-people-fill.text-success
                        a(href="list/fo")
                          button.btn.btn-success 
                           i.bi.bi-three-dots-vertical.text-white
                    .col-7.col-md-8
                      .numbers
                        p.card-category 
                          |   Farmer ones                      
                        //- .d-flex.justify-content-center
                        //-   .spinner-border.text-success(role='status' )                     
                        h1.card-title 
                          |  #{farmer_ones}             
                .card-footer
                  hr
                  .stats
                    i.bi.bi-calendar
                    | Last day
            .col-lg-3.col-md-4.col-sm-6(style="margin-bottom:10px;")
              .card.card-stats
                .card-body
                  .row
                    .col-5.col-md-4
                      .icon-big.text-center.icon-success
                        i.bi.bi-people.text-success
                        a(href="list/uf")
                          button.btn.btn-success 
                           i.bi.bi-three-dots-vertical.text-white
                    .col-7.col-md-8
                      .numbers
                        p.card-category 
                          |  Urban farmers                             
                        h1.card-title 
                          |  #{urban_farmers}                
                .card-footer
                  hr
                  .stats
                    i.bi.bi-clock-o
                    |    In the last hour
            .col-lg-3.col-md-4.col-sm-6(style="margin-bottom:10px;")
              .card.card-stats
                .card-body
                  .row
                    .col-5.col-md-4
                      .icon-big.text-center.icon-warning
                        i.bi.bi-briefcase.text-success
                      a(href="list/products")
                          button.btn.btn-success 
                            i.bi.bi-three-dots-vertical.text-white
                    .col-7.col-md-8
                      .numbers
                        p.card-category 
                         |    Products                                        
                        h1.card-title 
                            |  #{products}                
                .card-footer
                  hr
                  .stats
                    i.bi.bi-arrow-clockwise
                      | Update now
            .col-lg-3.col-md-4.col-sm-6(style="margin-bottom:10px;")
              .card.card-stats
                .card-body
                  .row
                    .col-5.col-md-4
                      .icon-big.text-center.icon-warning
                        i.bi.bi-briefcase.text-success
                        button.btn.btn-success 
                         i.bi.bi-three-dots-vertical.text-white
                    .col-7.col-md-8
                      .numbers
                        p.card-category 
                         |    Customers                                       
                        h1.card-title 
                            |   #{customers}                
                .card-footer
                  hr
                  .stats
                    i.bi.bi-arrow-clockwise
                      | Update now

      
script(src='/assets/bootstrap/js/bootstrap.min.js')
script(src='/assets/bootstrap/js/bootstrap.bundle.js')
script(src='/assets/bootstrap/js/bootstrap.bundle.min.js')
