doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css')
  link(rel='stylesheet' href='/assets//bootstrap/css/bootstrap-grid.rtl.min.css.map')
  link(rel="shortcut icon", href="/assets/vectors/ufarm-logo.png", type="image/x-icon")
  link(rel="stylesheet" href="/css/dashboard.css") 
  title Products List
header
  // Sidebar
  nav#sidebarMenu.collapse.d-lg-block.sidebar.collapse.bg-white
    .position-sticky
      .list-group.list-group-flush.mx-3.mt-4
        a.list-group-item.list-group-item-action.py-2.ripple(href='/admin')
          i.bi.bi-speedometer2.fa-fw.me-3
          span  Dashboard
        a.list-group-item.list-group-item-action.py-2.ripple(href='/register/fo')
          i.bi.bi-person-plus-fill.fa-fw.me-3
          span Register Farmer
        a.list-group-item.list-group-item-action.py-2.ripple(href='/add-product/')
          i.bi-file-earmark-plus-fill.fa-fw.me-3
          span Add product
        a.list-group-item.list-group-item-action.py-2.ripple(href='/list/fo')
          i.bi.bi-people-fill.fa-fw.me-3
          span Farmer Ones
        a.list-group-item.list-group-item-action.py-2.ripple.active(href='/list/products')
          i.bi.bi-receipt.fa-fw.me-3
          span Products
        button.btn.list-group-item.list-group-item-action.bg-success.text-light
          i.bi.bi-box-arrow-left.fa-fw.me-3
          | Logout
  // Sidebar
  // Navbar
  nav#main-navbar.navbar.navbar-expand-lg.navbar-light.bg-dark.fixed-top
    // Container wrapper
    .container-fluid
      // Toggle button
      button.navbar-toggler(type='button' data-mdb-toggle='collapse' data-mdb-target='#sidebarMenu' aria-controls='sidebarMenu' aria-expanded='false' aria-label='Toggle navigation')
        i.bi.bi-bars
      // Brand
      a.navbar-brand(href='#')
        img(src="/assets/vectors/ufarm-logo-white.png", alt="" style="width:150px;") 
      // Search form
      form.d-none.d-md-flex.input-group.w-auto.my-auto
        input.form-control.rounded(autocomplete='off' type='search' placeholder='looking for anuthing?' style='min-width: 225px')
        span.input-group-text.border-0
          i.bi.bi-search
      // Right links
      ul.navbar-nav.ms-auto.d-flex.flex-row
        // Notification dropdown
        li.nav-item.dropdown
          a#navbarDropdownMenuLink.nav-link.me-3.me-lg-0.dropdown-toggle.hidden-arrow(href='#' role='button' data-mdb-toggle='dropdown' aria-expanded='false')
            i.bi.bi-bell.text-light
            span.badge.rounded-pill.badge-notification.bg-success 
              | 1
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdownMenuLink')
            li
              a.dropdown-item(href='#') Some news
            li
              a.dropdown-item(href='#') Another news
            li
              a.dropdown-item(href='#') Something else here
       
        li.nav-item.dropdown.text-light
          a#navbarDropdownMenuLink.nav-link.dropdown-toggle.hidden-arrow.d-flex.align-items-center(href='#' role='button' data-mdb-toggle='dropdown' aria-expanded='false')
            img.rounded-circle(src='https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp' height='40' alt='Avatar' loading='lazy')
          ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdownMenuLink')
            li
              a.dropdown-item(href='#') My profile
            li
              a.dropdown-item(href='#') Settings
            li
              a.dropdown-item(href='#') Logout
            li
              button.btn.bg-success.text-light Logout
main(style='margin-top: 58px')
  .container-fluid.pt-4
    .row
      .col-md-12
        .card
          .card-header
            h4.card-title
              |  All Uploaded Products
          .card-body
              table.table.table-responsive.table-bordered.table-rounded
                thead.text-white.bg-success
                  th Image
                  th Id
                  th Name
                  th Quantity
                  th Unit Price
                  th Location
                  th Product Type
                  th Delivery Mode
                  th Farmer ID
                  th.text-right Action
                tbody
                  if products
                      each product in products
                        tr
                          td
                            img(src='https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp' width="50px")
                          td 
                            span.badge.badge-success.text-white.bg-success
                              | #{product.id}
                          td #{product.product_name}
                          td #{product.quantity}
                          td #{product.unit_price}
                          td #{product.location}
                          td #{product.produce_type}
                          td #{product.delivery_mode}
                          td Farmer ID 
                          
                          td.text-right
                              button.btn.bg-success.text-white.justify-content-between(style="margin:5px;")
                                i.bi.bi-three-dots-vertical.text-white                
                          //- .d-flex.justify-content-center
                          //-   .spinner-border.text-success(role='status' style=' width: 2rem; height: 2rem')
// Main layout
script(src='./bootstrap/js/bootstrap.min.js')
script(src='./bootstrap/js/bootstrap.bundle.js')
script(src='./bootstrap/js/bootstrap.bundle.min.js')
