header#header
  .container-fluid.d-flex.align-items-center.header-content
    h1.logo.mr-auto
      a(href='/') 
        img(src="/assets/vectors/ufarm-logo-white.png", alt="" style="width:150px;")
    // Nava Menu
    nav.nav-menu.d-none.d-lg-block
      ul
        li(class=page=="home"?"active":"")
          a(href='/') Home
        li(class=page=="products"?"active":"")
          a(href='/products') Products
        li(class=page=="cart"?"active":"")
          a(href='/products/cart/') Cart
       
    // End of Nav
    .btn-area
      if user_role=="client"
       form(method="POST" action="/logout" )
           button.btn.sign-up(type="submit") Logout
      else
        a.btn.sign-up(href='/register') Sign up
        a.btn.login(href='/login') Login