script.
  function generateFarmerId() {//gernerate a farmer id
  let newId = 10000 + Math.floor(Math.random() * 900000);
  let input = document.getElementById("id");
  input.value="FO-"+newId;
  }
  function hideAlert() {
  let alert=""
  document.getElementById("errAlert").innerHTML = alert;
  }