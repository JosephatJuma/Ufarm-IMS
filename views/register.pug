html(lang="en")
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css')
        link(rel='stylesheet' href='/assets//bootstrap/css/bootstrap-grid.rtl.min.css.map')
        link(rel="shortcut icon", href="/assets/vectors/ufarm-logo.png", type="image/x-icon")
        style.
                body {
                background-image: url('/assets/images/farmer.jpg');
                background-repeat: no-repeat;
                background-size: cover;
                font-family: Roboto, "san-serif";
                
                }
                .login-form {
                background-color: #5c9f24c0;
                padding: 20px;
                border-radius: 5px;
                box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);
                margin-top: 100px;
                }
                .form-control:focus {
                border-color: #007bff;
                box-shadow: none;
                }
                .custom-cursor {
                  cursor: pointer;
                }
                footer {
                  background-color:'#5c9f24c0';
                  align-items:center;
                  
                }

body(onload="return generateUserId();") 
  nav#main-navbar.navbar.navbar-expand-lg.navbar-light.bg-dark.fixed-top
    .container-fluid
      button.navbar-toggler(type='button' data-mdb-toggle='collapse' data-mdb-target='#sidebarMenu' aria-controls='sidebarMenu' aria-expanded='false' aria-label='Toggle navigation')
        i.bi.bi-bars
      a.navbar-brand(href='#') 
          img(src="/assets/vectors/ufarm-logo-white.png"
          width="100"
          alt="U-Farm Logo"
          loading="lazy")
      ul.navbar-nav.ms-auto.d-flex.flex-row
        li.nav-item.dropdown
          a#navbarDropdownMenuLink.nav-link.me-3.me-lg-0.dropdown-toggle(href='/login')
            button.btn.btn-success
              i.bi.bi-box-arrow-right.text-light
              | Sign In
          
  .container
    .row.justify-content-center
      .col-md-8
        .login-form
          h2.text-center.mb-4.text-white User Registration
          if message
            .alert.bg-danger.alert-dismissible.show.fade(role='alert' fade='' style='display:flex;justify-content:space-between;')
              p.text-white
                strong Alert: #{message}
              button.btn.text-white(type='button' onclick='return hideAlert()')
                span(aria-hidden='true') &times;
          form#regForm(onsubmit='return validateUserForm();' method="post" action="/register")
            .row
             .col-md-4.pr-1
                .form-group
                  label.text-white Full Name
                  input#name.form-control(type='text' placeholder='Full Name' name='name')
                  p#nameErr.text-dark
             .col-md-4.pr-1
                .form-group
                  label.text-white User ID
                  input#id.form-control(type='text' placeholder='Unique Id' name='id' readonly='')
                  p#idErr.text-dark
             .col-md-4.pr-1
                .form-group
                  label.text-white Gender
                  select#gender.form-select(name='gender')
                    option(value="" selected disabled) Select Gender
                    option(value='Male') Male
                    option(value='Female') Female
                  p#genderErr.text-dark   
            .row
              .col-md-4.pr-1
                .form-group
                  label.text-white Date of Birth 
                  input#dob.form-control(type='date' name='dob')
                  p#dobErr.text-dark
              .col-md-4.pl-1
                .form-group
                  label.text-white Address
                  input#address.form-control(type='text' placeholder='Address' name='address')
                  p#addressErr.text-dark
              .col-md-4.pr-1
                .form-group
                  label.text-white Phone Number
                  input#phone.form-control(type='phone' placeholder='Phone Number' name='phone')
                  p#phoneErr.text-dark
            .row
              .col-md-4.pl-1
                .form-group
                  label.text-white Email Address
                  input#email.form-control(type='text' placeholder='Email address' name='email')
                  p#emailErr.text-dark
              .col-md-4.pr-1
                .form-group
                  label.text-white Password
                  .d-none.d-md-flex.input-group.w-auto.my-auto
                    input#password.form-control(type='password' placeholder='Set a password' name='password')
                    span#show.input-group-text.border-0.bg-dark.text-white.custom-cursor(onclick="return toggleShowPassword();")
                        i.bi.bi-eye
                  p#passwordErr.text-dark 
              .col-md-4.pr-1
                .form-group
                  label.text-white Confirm password
                  .d-none.d-md-flex.input-group.w-auto.my-auto 
                    input#confirm.form-control(type='password' placeholder='Confirm password' name='confirm')
                    span#hide.input-group-text.border-0.bg-dark.bg.text-white.custom-cursor(onclick="return toggleHide();")
                      i.bi.bi-eye
                    p#confirmErr.text-dark
            .row 
              .col-md-6.pr-1    
                button.btn.btn-dark.btn-block.mb-6(type='submit' style="margin-top:20px; width:100%;") REGISTER
              .col-md-6.pr-1  
                a(href="/login")
                  .btn.btn-success.btn-block.mb-6(style="margin-top:20px; width:100%;") LOGIN
  footer.fixed-bottom.text-white
    .container.align-items-center
      p This is my footer.
script(src='/js/sign.js')
script.
  function generateUserId() {//gernerate a farmer id
  let newId = 10000 + Math.floor(Math.random() * 900000);
  let input = document.getElementById("id");
  input.value="U-"+newId;
  }
  
  


                
                
